<Window x:Class="WpfApp2.TelaCadastroPessoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="TelaCadastroPessoa" Height="250" Width="200">
    <Grid>
        <Label Content="Codigo" HorizontalAlignment="Left" Margin="9,37,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtCodigo" HorizontalAlignment="Left" Margin="58,41,0,0" TextWrapping="Wrap" Text="{Binding Codigo}" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="9,73,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtNome" HorizontalAlignment="Left" Margin="58,81,0,0" TextWrapping="Wrap" Text="{Binding Nome}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Click="bnt_Salvar"></Button>
    </Grid>
</Window>
